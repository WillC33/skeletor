{
  "manifest_version": 2,
  "name": "Skeletor: Template Manager",
  "version": "0.2.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5d902262-9887-417d-9634-fec05b3564c8}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "description": "Manage and insert text templates across websites",
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "commands": {
    "insert-template": {
      "suggested_key": {
        "default": "Ctrl+Alt+I",
        "mac": "Command+Alt+I"
      },
      "description": "Open template selector"
    }
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Skeletor: Template Manager",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
